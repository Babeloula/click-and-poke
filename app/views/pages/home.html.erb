<%# Banner %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=asset_path('pokemon-background-dragonite.jpg')%>);">
  <div class="container">
    <h1 id="blue-yellow-color">You want to</h1>
      <p>
        <span id="banner-typed-text"></span>
      </p>

    <%= simple_form_for :search, url: pokespots_path, method: :get do |f| %>
      <%= f.input :address, label: false, placeholder: "Enter your address, we'll look for the nearest Pokespot" %>
      <%# <%= f.submit "search", class: "send_address" %>
    <% end %>
  </div>
</div>

