<div class="container-fluid m-3 d-flex">
  <div>
    <h1>Discover your next Pokespot!</h1>

    <ul class="nav justify-content-center">
      <li class="nav-item-index mr-5">
        <h2><%= link_to "üî•", params[:filter].present? ? pokespots_path : pokespots_path(filter: "Fire") %></h2>
      </li>
      <li class="nav-item-index mr-5">
        <h2><%= link_to "üíß", params[:filter].present? ? pokespots_path : pokespots_path(filter: "Water") %></h2>
      </li>
      <li class="nav-item-index mr-5">
        <h2><%= link_to "üåø", params[:filter].present? ? pokespots_path : pokespots_path(filter: "Grass") %></h2>
      </li>
      <li class="nav-item-index mr-5">
        <h2><%= link_to "‚ö°Ô∏è", params[:filter].present? ? pokespots_path : pokespots_path(filter: "Electric") %></h2>
      </li>
      <li class="nav-item-index mr-5">
        <h2><%= link_to "‚ò†Ô∏è", params[:filter].present? ? pokespots_path : pokespots_path(filter: "Poison") %></h2>
      </li>
      <li class="nav-item-index">
        <h2><%= link_to "üóø", params[:filter].present? ? pokespots_path : pokespots_path(filter: "Rock") %></h2>
      </li>
    </ul>

    <div class="cards">
      <% @pokespots.each do |pokespot| %>
      <div class="card-trip d-flex flex-column">
        <%= link_to pokespot_path(pokespot), style: "text-decoration: none" do %>
          <div class="card-price d-flex justify-content-between">
            <% if pokespot.pokemon_type == "Fire" %>
              <h2>üî•</h2>
            <% elsif pokespot.pokemon_type == "Water" %>
              <h2>üíß</h2>
            <% elsif pokespot.pokemon_type == "Grass" %>
              <h2>üåø</h2>
            <% elsif pokespot.pokemon_type == "Electric" %>
              <h2>‚ö°Ô∏è</h2>
            <% elsif pokespot.pokemon_type == "Poison" %>
              <h2>‚ò†Ô∏è</h2>
            <% elsif pokespot.pokemon_type == "Rock" %>
              <h2>üóø</h2>
            <% end %>
            <h2><small>‚ÇΩ</small><%= pokespot.price %></h2>
          </div>
          <div class="card-cover align-items-center">
            <% if pokespot.photo.attached? %>
              <%= cl_image_tag pokespot.photo.key %>
            <% end %>
          </div>
          <div class="card-trip-infos">
            <div class="d-flex">
              <div>
                <h2><%= pokespot.name %></h2>
                <p><strong>Champion:</strong></p>
                <p><%= pokespot.user.username%></p>
                <hr>
                <p><strong>Pokemon Type:</strong> <%= pokespot.pokemon_type%></p>
                <hr>
                <p><strong>Catching Ratio:</strong> <%= pokespot.scarcity_drop_level%>%</p>
              </div>
            </div>
            <% if pokespot.user.photo.attached? %>
              <%= cl_image_tag pokespot.user.photo.key, class:"card-trip-user avatar-bordered" %>
            <% end%>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>

  <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
