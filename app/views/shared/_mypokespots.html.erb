<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="pending-tab" data-toggle="tab" href="#pending" role="tab" aria-controls="pending" aria-selected="true">â‰ï¸ Pending</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="inprogress-tab" data-toggle="tab" href="#inprogress" role="tab" aria-controls="inprogress" aria-selected="false">âœ… Accepted</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="ended-tab" data-toggle="tab" href="#ended" role="tab" aria-controls="ended" aria-selected="false">Ended </a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="pending" role="tabpanel" aria-labelledby="pending-tab">
    <% @clients_booking.status_Pending.each do |client_booking| %>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
            <div>
              <p><strong>Rented Pokespot : </strong><%= client_booking.pokespot.name %></p>
              <p><strong>Client name : </strong><%= client_booking.user.username%></p>
              <p><strong>Start date : </strong><%= client_booking.start_date %></p>
              <p><strong>End date : </strong><%= client_booking.end_date %></p>
            </div>
          </div>
          <div>
            <ul>
              <li class="btn btn-green-accepted"><%= link_to "Accepted", booking_path(client_booking, status: "Accepted"), method: :patch %></li>
              <li class="btn btn-red-declined"><%= link_to "Delined", booking_path(client_booking), method: :patch %></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="tab-pane fade" id="inprogress" role="tabpanel" aria-labelledby="inprogress-tab">
    <% @clients_booking.status_Accepted.each do |client_booking| %>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <p><strong>Rented Pokespot : </strong><%= client_booking.pokespot.name %></p>
          <p><strong>Client username : </strong><%= client_booking.user.username%></p>
          <p><strong>Start date : </strong><%= client_booking.start_date %></p>
          <p><strong>End date : </strong><%= client_booking.end_date %></p>
          <a id="validate-background">You accepted booking ğŸ‘</a>
        </div>
      </div>
    <% end %>
  </div>
  <div class="tab-pane fade" id="ended" role="tabpanel" aria-labelledby="ended-tab">
    <% @clients_booking.each do |client_booking| %>
      <% if client_booking.end_date <= Date.today && client_booking.status_Accepted %>
        <div class="card-product">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="card-product-infos">
            <p><strong>Rented Pokespot : </strong><%= client_booking.pokespot.name %></p>
            <p><strong>Client name : </strong><%= client_booking.user.username%></p>
            <p><strong>Start date : </strong><%= client_booking.start_date %></p>
            <p><strong>End date : </strong><%= client_booking.end_date %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
