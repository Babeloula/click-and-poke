<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="pending-tab" data-toggle="tab" href="#pending" role="tab" aria-controls="pending" aria-selected="true">⁉️ Pending</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="inprogress-tab" data-toggle="tab" href="#inprogress" role="tab" aria-controls="inprogress" aria-selected="false">‼️ In progress</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="ended-tab" data-toggle="tab" href="#ended" role="tab" aria-controls="ended" aria-selected="false">✅ Ended </a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="pending" role="tabpanel" aria-labelledby="pending-tab">
    <% @clients_booking.status_Pending.each do |client_booking| %>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <p><strong>Rented Pokespot : </strong><%= client_booking.pokespot.name %></p>
          <p><strong>Client name : </strong><%= client_booking.user.username%></p>
          <p><strong>Start date : </strong><%= client_booking.start_date %></p>
          <p><strong>End date : </strong><%= client_booking.end_date %></p>
          <%= link_to "Accepted" do %>
            <% client_booking.status = "Accepted" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="tab-pane fade" id="inprogress" role="tabpanel" aria-labelledby="inprogress-tab">
    <% @clients_booking.status_Accepted.each do |client_booking| %>
      <% if (client_booking.start_date <= Date.today) && (client_booking.end_date >= Date.today) %>
      <%= client_booking %>
      <% end %>
    <% end %>
  </div>
  <div class="tab-pane fade" id="ended" role="tabpanel" aria-labelledby="ended-tab">
    <% @clients_booking.each do |client_booking| %>
      <% if client_booking.end_date == Date.today%>
      <%= client_booking %>
      <% end %>
    <% end %>
  </div>
</div>
